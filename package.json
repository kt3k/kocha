{
  "name": "kocha-monorepo",
  "description": "Modern, simpler Mocha clone, no globals, lint friendly",
  "scripts": {
    "lint": "standard",
    "fix": "standard --fix",
    "test": "npm run test:karma-kocha && npm run test:kocha",
    "test:karma-kocha": "karma start",
    "test:kocha": "mocha --require ./packages/kocha/src/__tests__/loader.js \"packages/**/__tests__/**/*.js\"",
    "example:pass": "./packages/kocha/bin/kocha.js packages/kocha/examples/simple-pass.js",
    "example:fail": "./packages/kocha/bin/kocha.js ./src/__tests__/loader.js packages/kocha/examples/simple-fail.js",
    "example:timeout": "./packages/kocha/bin/kocha.js packages/kocha/examples/timeout-fail.js",
    "example:nested": "./packages/kocha/bin/kocha.js packages/kocha/examples/nested-pass.js",
    "example:slow": "./packages/kocha/bin/kocha.js packages/kocha/examples/slow-pass.js",
    "example:self-exec-pass": "node packages/kocha/examples/self-exec-pass.js",
    "example:self-exec-fail": "node --require ./src/__tests__/loader.js packages/kocha/examples/self-exec-fail.js",
    "cov": "nyc --reporter=lcov npm test",
    "codecov": "npm run cov && codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kt3k/kocha.git"
  },
  "keywords": [
    "mocha",
    "test",
    "bdd",
    "tdd"
  ],
  "author": "Yoshiya Hinosawa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kt3k/kocha/issues"
  },
  "homepage": "https://github.com/kt3k/kocha#readme",
  "devDependencies": {
    "browserify": "^14.4.0",
    "codecov": "^2.2.0",
    "espower-loader": "^1.2.2",
    "karma": "^1.7.0",
    "karma-browserify": "^5.1.1",
    "karma-chrome-launcher": "^2.1.1",
    "lerna": "^2.0.0-rc.5",
    "mocha": "^3.4.2",
    "nyc": "^11.0.1",
    "power-assert": "^1.4.2",
    "standard": "^10.0.2",
    "testdouble": "^2.1.2"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "nyc": {
    "exclude": [
      "**/__tests__/**",
      "**/examples/**",
      "karma.conf.js"
    ]
  }
}
