{
  "name": "kocha",
  "version": "1.1.0",
  "description": "Modern, simpler Mocha clone, no globals, lint friendly",
  "main": "src/index.js",
  "bin": "bin/kocha.js",
  "scripts": {
    "lint": "standard",
    "fix": "standard --fix",
    "test": "npm run test:karma-kocha && npm run test:kocha",
    "test:karma-kocha": "karma start",
    "test:kocha": "mocha --require ./src/__tests__/loader.js \"{src,examples}{/,**/}__tests__/**/*.js\"",
    "example:pass": "./bin/kocha.js examples/simple-pass.js",
    "example:fail": "./bin/kocha.js ./src/__tests__/loader.js examples/simple-fail.js",
    "example:timeout": "./bin/kocha.js examples/timeout-fail.js",
    "example:nested": "./bin/kocha.js examples/nested-pass.js",
    "example:slow": "./bin/kocha.js examples/slow-pass.js",
    "example:self-exec-pass": "node examples/self-exec-pass.js",
    "example:self-exec-fail": "node --require ./src/__tests__/loader.js examples/self-exec-fail.js",
    "cov": "nyc --reporter=lcov npm test",
    "codecov": "npm run cov && codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kt3k/macha.git"
  },
  "keywords": [
    "mocha",
    "test",
    "bdd",
    "tdd"
  ],
  "author": "Yoshiya Hinosawa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kt3k/macha/issues"
  },
  "homepage": "https://github.com/kt3k/macha#readme",
  "dependencies": {
    "action-selector": "^1.0.0",
    "diff": "^3.2.0",
    "glob": "^7.1.2",
    "minimisted": "^1.1.1",
    "ms": "^2.0.0",
    "stringifier": "^1.3.0",
    "supports-color": "^3.2.3"
  },
  "devDependencies": {
    "browserify": "^14.4.0",
    "codecov": "^2.2.0",
    "espower-loader": "^1.2.2",
    "karma": "^1.7.0",
    "karma-browserify": "^5.1.1",
    "karma-chrome-launcher": "^2.1.1",
    "mocha": "^3.4.2",
    "nyc": "^11.0.1",
    "power-assert": "^1.4.2",
    "standard": "^10.0.2",
    "testdouble": "^2.1.2"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "nyc": {
    "exclude": [
      "**/__tests__/**",
      "examples"
    ]
  }
}
