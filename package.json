{
  "name": "macha",
  "version": "0.1.0",
  "description": "Simpler Mocha clone, no globals, lint friendly",
  "main": "src/index.js",
  "scripts": {
    "lint": "standard",
    "fix": "standard --fix",
    "test": "mocha --require ./src/__tests__/loader.js \"src{/,**/}__tests__/**/*.js\"",
    "cov": "nyc --reporter=lcov npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kt3k/macha.git"
  },
  "keywords": [
    "mocha",
    "test",
    "bdd",
    "tdd"
  ],
  "author": "Yoshiya Hinosawa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kt3k/macha/issues"
  },
  "homepage": "https://github.com/kt3k/macha#readme",
  "dependencies": {
    "debug": "^2.6.8",
    "diff": "^3.2.0",
    "glob": "^7.1.2",
    "json3": "^3.3.2",
    "ms": "^2.0.0",
    "supports-color": "^3.2.3"
  },
  "devDependencies": {
    "espower-loader": "^1.2.2",
    "mocha": "^3.4.2",
    "nyc": "^11.0.1",
    "power-assert": "^1.4.2",
    "standard": "^10.0.2",
    "testdouble": "^2.1.2"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
